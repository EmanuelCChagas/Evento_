<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/fotoEvento"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tituloEvento"
        android:layout_width="230dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="64dp"
        android:maxLines="2"
        android:text="@string/app_eventos_recycle_item_eventos_titulo"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/fotoEvento"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dataHoraEvento"
        android:layout_width="251dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="16dp"
        android:maxLines="4"
        android:text="@string/app_eventos_data_hora_padrao"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/tituloEvento"
        app:layout_constraintStart_toEndOf="@+id/fotoEvento" />

</androidx.constraintlayout.widget.ConstraintLayout>